  <body>
    <div class="container">
      <div class="row">
      
        <div class="col-xs-12 col-lg-8 col-lg-offset-2">
           <div class="row text-right">
            <h2 class="col-xs-12"><a href="/logout " class="btn btn-danger " >退出登录</a></h2>
          </div>
          <hr />
           <div class="row">
             <h2 class="col-xs-6">记账本</h2>
             <h2 class="col-xs-6 text-right">
              <a href="/account/create " class="btn btn-primary">添加账单</a>
             </h2>
           </div>
          <hr />
          <div class="accounts">
            <% list.forEach(item => { %>
              <div class="panel <%= item.type > 0 ? 'panel-success':'panel-danger'%>">
                <div class="panel-heading">
                  <%= moment(item.time).format('YYYY-MM-DD') %>
                </div>
                <div class="panel-body">
                  <div class="col-xs-6">
                    <%= item.title %>
                  </div>
                  <div class="col-xs-2 text-center">
                    <span class="label <%= item.type > 0 ?  'label-success':'label-warning'%> "><%= item.type >0 ? "收入" : "支出" %></span>
                  </div>
                  <div class="col-xs-2 text-right"><%= item.count %> 元</div>
                  <div class="col-xs-2 text-right">
                    <a href="/account/<%= item._id %>">
                      <span
                      class="glyphicon glyphicon-remove"
                      aria-hidden="true"
                    ></span>
                    </a>
                    
                  </div>
                </div>
              </div>
            <%})%>
